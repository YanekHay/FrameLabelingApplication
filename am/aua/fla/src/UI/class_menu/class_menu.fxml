<Scene stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.class_menu.ClassMenuController">
   <root>
      <BorderPane>
         <center>
            <ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="546.0" prefWidth="440.0">
               <content>
                  <VBox fx:id="classListContainer" prefHeight="106.0" prefWidth="438.0">
                     <children>
                        <HBox fx:id="titles" minHeight="45.0" prefHeight="45.0" prefWidth="438.0">
                           <children>
                              <Label fx:id="fillColorTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" prefWidth="88.0" text="Fill Color" textAlignment="CENTER">
